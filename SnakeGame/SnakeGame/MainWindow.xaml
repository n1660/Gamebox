<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="725" KeyDown="Window_KeyDown" Background="#ff77aa77" Name="Win">
    <Grid>
        <Button Name="BtnStartSnake" Click="BtnStartSnake_Click" Width="150" Height="180" BorderThickness="0" Foreground="#ff77aa77" FontSize="30" FontWeight="Bold" Background="#ff444444">
            <StackPanel Orientation="Vertical" Margin="10">
                <Image Name="btnbgimg" Source="Snakegame/Images/snakestart.jpg" Width="150" Height="120"/>
                <TextBlock HorizontalAlignment="Center">Start</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>