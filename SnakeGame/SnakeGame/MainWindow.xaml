<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000" KeyDown="Window_KeyDown" Name="Win">
    <Grid>
        <Canvas Name="BtnStartSnake" MouseDown="BtnStartSnake_Click" Width="150" Height="180">
            <TextBlock Background="Transparent" Canvas.Bottom="-40" Canvas.Left="40" Foreground="#ff77aa77" FontSize="30" FontWeight="Bold">Start</TextBlock>
        </Canvas>
    </Grid>
</Window>