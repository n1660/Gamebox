<Window x:Class="test.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="ClientWindow" Height="350" Width="525">
    <DockPanel Background="Black">
        <TextBox Name="TxtSend" Background="DarkSlateGray" DockPanel.Dock="Top" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Margin="10, 10, 0, 0"></TextBox>
        <Button Click="BtnSend_Click"  Name="BtnSend" Background="SlateGray" Width="100" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontSize="25" Margin="10, 0, 0, 0">SEND</Button>
        <TextBlock Name="TxtBlReceive" Background="DarkBlue"  DockPanel.Dock="Right" VerticalAlignment="Top" HorizontalAlignment="Left" Width="400" Height="200" Foreground="Yellow" Margin="0, 50, 0, 0">received messages:</TextBlock>
    </DockPanel>
</Window>
